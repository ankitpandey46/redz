generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  firstName   String
  lastName    String
  email       String   @unique
  phoneNumber String   @unique
  countryCode String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  bookRides    BookRide[]
}

model OTP {
  id        Int      @id @default(autoincrement())
  username  String
  otp       String
  createdAt DateTime @default(now())

  @@index([username])
}

model DriverOTP {
  id          Int      @id @default(autoincrement())
  phoneNumber String
  otp         String
  createdAt   DateTime @default(now())

  @@index([phoneNumber])
}

model ErrorLog {
  id        Int      @id @default(autoincrement())
  message   String?
  type      String?
  details   Json?
  timestamp DateTime @default(now())
}

model Driver {
  id                   Int        @id @default(autoincrement())
  firstName            String
  lastName             String
  email                String     @unique
  phoneNumber          String     @unique
  countryCode          String
  nrc                  String
  nrcImage             String
  selfieImage          String
  policeClearanceImage String
  vehicleMake          String
  vehicleModel         String
  vehiclePlate         String
  vehicleColor         String
  status               String     @default("pending")
  createdAt            DateTime   @default(now())
  updatedAt            DateTime   @updatedAt
  bookRides            BookRide[]
  driverOnline         DriverOnline?   
}

model DriverOnline {
  id           Int      @id @default(autoincrement())
  driverId     Int     
  latitude     Float
  longitude    Float
  driverstatus String  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  driver Driver @relation(fields: [driverId], references: [id])
}

model BookRide {
  id          Int      @id @default(autoincrement())
  userId      Int
  driverId    Int
  pickupLat   Float
  pickupLng   Float
  dropLat     Float
  dropLng     Float
  status      String   @default("REQUESTED") // REQUESTED, ACCEPTED, COMPLETED, CANCELLED
  cancelledBy String?
  amount      Float?
  currency    String?  @default("USD")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  driver Driver @relation(fields: [driverId], references: [id])
}
